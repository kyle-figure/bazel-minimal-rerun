load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

cc_import(
    name = "rerun_core",
    static_library = "@rerun//:lib/librerun_c__linux_x64.a",
)

cmake(
    name = "rerun",
    generate_args = [
        "-GNinja",
    ],
    cache_entries = {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "RERUN_ARROW_LINK_SHARED": "OFF",
    },
    lib_source = ":all_srcs",
    out_static_libs = [
        "librerun_sdk.a",
        "libarrow.a"
    ],
    tags = ["manual"],
    deps = [":rerun_core"],
)
